<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseSuccessful">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="164dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="114dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/success" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="sans-serif"
        android:text="@string/purchase_successful"
        android:textColor="@color/green"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="sans-serif"
        android:text="Thank You!"
        android:textColor="@color/green"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button33"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#A3A1F5"
        android:text="@string/add_ticket_to_my_favorites"
        app:layout_constraintBottom_toTopOf="@+id/bottomQuickBuy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bottomQuickBuy"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:background="@color/lilac"
        android:backgroundTint="#A3A1F5"
        android:text="Quick Buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bottomSearch"
        android:layout_width="137dp"
        android:layout_height="56dp"
        android:background="@color/baby_blue"
        android:backgroundTint="#C2E1FF"
        android:text="Search"
        app:backgroundTint="@color/baby_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bottomProfile"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:background="@color/lilac"
        android:backgroundTint="#A3A1F5"
        android:text="My Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomQuickBuy"
        app:layout_constraintStart_toEndOf="@+id/bottomSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>
